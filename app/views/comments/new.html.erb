<section class="container mt-5">
  <div class="row justify-content-center align-items-center "> <!-- Center vertically using Flexbox -->
    <div class="col-6 border border-dark rounded-1  border-2 p-5">
    <h1 class="text-center">Add A Comment</h1>
        <% if flash[:error].present? %>
            <div class="alert alert-danger">
            <%= flash[:error] %>
            </div>
        <% end %>
      
      <%= form_with(model: @comment, url: user_post_comments_path(@user, @post)) do |form| %>

        <div class="form-group">
            <%= form.label :body, 'Comment' %>
            <%= form.text_area :body, class: 'form-control' %>
        </div>

        <div class="form-group mt-2">
          <%= form.submit 'Create Post', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</section>