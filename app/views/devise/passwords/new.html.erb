<section class="container mt-5">
<h2 class="d-flex justify-content-center">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-100"  %>
  </div>

  <div class="actions d-flex justify-content-center mt-4" >
    <%= f.submit "Send me reset password instructions", class: "btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</section>